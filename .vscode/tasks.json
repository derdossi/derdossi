{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "clean build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "rm -rf ./build/",
            "windows": {
                "command": "rm -R .\\build\\"
            }
        },
        {
            "type": "shell",
            "label": "make build dir",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "mkdir -p build",
            "windows": {
                "command": ".\\.vscode\\make_build_dir.bat\""
            }
        },
        {
            "type": "shell",
            "label": "build active file",
            "dependsOn": "make build dir",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "windows": {
                "command": "gcc.exe",
                "args": [
                    "-std=c11",
                    "-g",
                    "-Wall",
                    "${file}",
                    "-o",
                    "${workspaceFolder}\\build\\${fileBasenameNoExtension}.exe"
                ]
            },
            "linux": {
                "command": "/usr/bin/gcc",
                "args": [
                    "-std=c11",
                    "-g",
                    "-Wall",
                    "${file}",
                    "-o",
                    "${workspaceFolder}/build/${fileBasenameNoExtension}"
                ]
            },
            "osx": {
                "command": "/usr/bin/clang",
                "args": [
                    "-std=c11",
                    "-g",
                    "-Wall",
                    "${file}",
                    "-o",
                    "${workspaceFolder}/build/${fileBasenameNoExtension}"
                ]
            }
        },
        {
            "type": "shell",
            "label": "build current directory",
            "dependsOn": "make build dir",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "windows": {
                "command": "gcc.exe",
                "args": [
                    "-std=c11",
                    "-g",
                    "-Wall",
                    "${workspaceFolder}\\*.c",
                    "-o",
                    "${workspaceFolder}\\build\\${fileBasenameNoExtension}.exe"
                ]
            },
            "linux": {
                "command": "/usr/bin/gcc",
                "args": [
                    "-std=c11",
                    "-g",
                    "-Wall",
                    "${workspaceFolder}\\*.c",
                    "-o",
                    "${workspaceFolder}/build/${fileBasenameNoExtension}"
                ]
            },
            "osx": {
                "command": "/usr/bin/clang",
                "args": [
                    "-std=c11",
                    "-g",
                    "-Wall",
                    "${workspaceFolder}\\*.c",
                    "-o",
                    "${workspaceFolder}/build/${fileBasenameNoExtension}"
                ]
            }
        },
        {
            "label": "Open Terminal",
            "type": "shell",
            "command": "echo \"Mac only!\"",
            "osx": {
                "command": "osascript -e 'tell application \"Terminal\"\ndo script \"echo Ready\"\nend tell'"
            },
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang.exe Aktive Datei kompilieren",
            "command": "C:\\Program Files\\mingw64\\bin\\clang.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Vom Debugger generierte Aufgabe."
        }
    ]
}